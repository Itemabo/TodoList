<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ListView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.todolistapp.HelloController"
      spacing="10" alignment="CENTER" style="-fx-background-color: #151515;">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <TextField fx:id="taskInput" promptText="Enter new task" prefWidth="200"/>
    <Button text="Add Task" onAction="#addTask"/>

    <ListView fx:id="taskListView" prefHeight="200" prefWidth="200"/>
    <Button text="Delete Selected Task" onAction="#deleteTask"/>
</VBox>

